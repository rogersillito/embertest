<article class="blog-post">
  <h1>{{title}}</h1>
  <i>(date in component = {{date}})</i>
  <p>{{yield}}</p>
  {{#if isEditing}}
  <p>Edit title: {{input type="text" value=title}} <a href="#" {{action "saveEdit"}}>Save</a></p>
  {{else}}
  
  <p><a href="#" {{action "edit"}}>Edit</a></p>
  {{/if}}

</article>